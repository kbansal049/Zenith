    //Validating opportunity stages changing from '2 - Technical Validation' to '7 - Negotiation & Review' and '11 - Closed Lost' to '12 - Closed With No Decision'
    public static void validateOpportunityStages(list<Opportunity> newOppList, map<Id, Opportunity> oldOppMap){
        
        List<String> profileIds = new List<String>();
        
        if(Label.Skip_Tech_Partners_Validations != null && Label.Skip_Tech_Partners_Validations != null){
            profileIds = Label.Skip_Tech_Partners_Validations.split(',');
        }
        
        List<Profile> profilesLst = [Select Id from Profile Where Id IN: profileIds];
        Set<Id> profileIdsToSkip = new Set<Id>();
        for(Profile profileRec : profilesLst){
            profileIdsToSkip.add(profileRec.Id);
        }
        
        //List<Profile> = [Select Id from Profile Where Id IN: profileIds];
        
        Map<Id, boolean> mapOpportunityWithTechnologyPartner = new Map<Id, boolean>();
        List<Technology_Partner__c> oppTechPartners = [Select Id, Opportunity__c From Technology_Partner__c WHERE Opportunity__c IN: newOppList];
        for(Technology_Partner__c oppTechPartner : oppTechPartners){
            if(mapOpportunityWithTechnologyPartner.get(oppTechPartner.Opportunity__c) == null){
                mapOpportunityWithTechnologyPartner.put(oppTechPartner.Opportunity__c, true);
            }
        }
        
        for(Opportunity opp : newOppList){
            Opportunity oldOpp = oldOppMap.get(opp.Id);
            if(opp.StageName != oldOpp.StageName && oldOpp.StageName == label.Stage_2_Qualified_Budgeted /*'2 - Technical Validation'*/ && opp.StageName == label.Stage_4_Economic_Buyer_Signoff /*'7 - Negotiation & Review'*/ && !profileIdsToSkip.contains(UserInfo.getProfileId())){
                if(mapOpportunityWithTechnologyPartner.get(opp.Id) == null){
                    opp.addError('A primary Technology Partner is required to move stages');
				}
            }
            if(/**opp.StageName != oldOpp.StageName &&**/ (opp.StageName == label.Stage_7_Closed_Lost && (opp.Sub_Stage__c == Label.SubStage_Closed_With_No_Decision || opp.Sub_Stage__c == Label.SubStage_Closed_Lost)) /*'11 - Closed Lost' || opp.StageName == '12 - Closed With No Decision'*/  && !profileIdsToSkip.contains(UserInfo.getProfileId()) ){
                if(mapOpportunityWithTechnologyPartner.get(opp.Id) == null){
                    opp.addError('A primary Technology Partner is required to move stages');
                }
            }
        }
    }
    
